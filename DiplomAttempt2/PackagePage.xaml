<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiplomAttempt2.PackagePage"
             Title="PackagePage" Style="{StaticResource Page}"
             >
    <ContentPage.ToolbarItems>
        <ToolbarItem>
            <ToolbarItem.IconImageSource>
                <FontImageSource
                     Color="{StaticResource Secondary}"
                     FontFamily="MaterialIconsOutlined-Regular"
                     Glyph="&#xe872;" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        <ToolbarItem>
            <ToolbarItem.IconImageSource>
            <FontImageSource
                Color="{StaticResource Secondary}"
                FontFamily="MaterialIconsOutlined-Regular"
                Glyph="&#xe3c9;" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem> 
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout HorizontalOptions="Fill" Spacing="10" Margin="10">
        <Button Text="Расы"  Clicked="ToRacesPage"/>
        <Button Text="Классы"  Clicked="ToClassesPage"/>
        <Button Text="Предыстории"  Clicked="ToOriginsPage"/>
        <Button Text="Предметы" />
        <Button Text="Черты"  Clicked="ToFeatsPage"/>
        <Button Text="Заклинания" />
        <Button Text="Монстры" />
    </VerticalStackLayout>
        
</ContentPage>