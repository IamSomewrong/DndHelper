<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiplomAttempt2.UserContentPage"
             Style="{StaticResource pageStyle}"
             Title="Пакеты">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="CreatePackage">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    Color="{StaticResource Secondary}"
                    FontFamily="MaterialIconsOutlined-Regular"
                    Glyph="&#xe145;" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ScrollView HorizontalOptions="Fill" Margin="10">
        <ListView x:Name="PackageView" ItemTapped="ChoosePackage">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding Name}" Style="{StaticResource listItemTextStyle}"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ScrollView>
</ContentPage>